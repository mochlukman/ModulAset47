    </parameterMap>
    <parameterMap id="update-param" extends="insert-param" class="Invbast">
    </parameterMap>
    <parameterMap id="delete-param" class="Invbast">
      <parameter property="Unitkey" column="UNITKEY"/>
      <parameter property="Nobast" column="NOBAST"/>
    </parameterMap>
  </parameterMaps>
