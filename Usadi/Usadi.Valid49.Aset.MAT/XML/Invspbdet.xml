    <typeAlias alias="Invspbdet" type="Usadi.Valid49.BO.InvspbdetControl, Usadi.Valid49.Aset.MAT " />
  </alias>
  <resultMaps>
    <resultMap id="return-result" class="Invspbdet">
      <result property="Id" column="ID"/>
